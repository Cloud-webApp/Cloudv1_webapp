[Unit]
Description= Node.js Application

[Service]
ExecStart=/usr/bin/node /home/admin/web-app/app.js
WorkingDirectory=/home/admin/web-app
User=your-username
Group=your-groupname
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=your-app

[Install]
WantedBy=multi-user.target
